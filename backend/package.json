{
  "name": "messenger-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "create-db": "tsx src/scripts/createDatabase.ts",
    "create-admin": "tsx src/scripts/createAdmin.ts",
    "create-user": "tsx src/scripts/createUser.ts",
    "create-avatar": "tsx src/scripts/createDefaultAvatar.ts",
    "setup": "npm run create-db && npm run create-avatar && npm run create-admin && npm run create-user"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "canvas": "^2.11.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "tsx": "^3.12.0",
    "typescript": "^5.0.0"
  }
}
